<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.scorestatistics.demo.mapper.FractionMapper">

    <!-- 通过id查询分数信息 -->
    <select id="findById" parameterType="java.lang.Long" resultType="cn.scorestatistics.demo.model.entity.Fraction">
        select id,username,class,fraction,fraction_change from tb_student where id=#{id};
    </select>

    <!-- 根据姓名查询成绩 -->
    <select id="findByName" parameterType="java.lang.String" resultType="cn.scorestatistics.demo.model.entity.Fraction">
        select id,username,class,fraction,fraction_change from tb_student where username=#{username};
    </select>

    <!--  根据姓名模糊查询  -->
    <select id="selectByName" parameterType="java.lang.String" resultType="cn.scorestatistics.demo.model.entity.Fraction">
        select id,username,class,fraction,fraction_change from tb_student where username like '%' #{username} '%';
    </select>

    <!--  查询同一班级所有学生的信息  -->
    <select id="findByClassName" parameterType="java.lang.String" resultType="cn.scorestatistics.demo.model.entity.Fraction">
        select * from tb_student where class=#{class};
    </select>

    <!--  加分  -->
    <update id="bouns" parameterType="java.lang.Long" >
    update tb_student set fraction = fraction + #{num} where id =#{id};
    update tb_student set fraction_change =   #{num} where id =#{id};
    </update>

    <!--  减分  -->
    <update id="Subtraction" parameterType="java.lang.Long" >
        update tb_student set fraction = fraction - #{num} where id =#{id};
        update tb_student set fraction_change =  - #{num} where id =#{id};
    </update>

    <!-- 点击一次加一分   -->
    <update id="oneBouns" parameterType="java.lang.Long" >
        update tb_student set fraction = fraction + 1 where id =#{id};
--         update tb_student set fraction_change =  1 where id =#{id};
    </update>

    <!-- 点击一次减一分   -->
    <update id="oneSubtraction" parameterType="java.lang.Long" >
        update tb_student set fraction = fraction - 1 where id =#{id};
        update tb_student set fraction_change =  - 1 where id =#{id};
    </update>


</mapper>